<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_300sdp"
    android:layout_height="@dimen/_140sdp"
    android:layout_margin="@dimen/_5sdp"
    android:backgroundTint="@color/grayBackground"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_1sdp">


        <ImageView
            android:id="@+id/linearLayout4"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_margin="@dimen/_5sdp"

            android:scaleType="centerCrop"
            android:src="@drawable/medication"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.068"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.175" />

        <TextView
            android:id="@+id/medication_name"
            android:layout_width="176dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/_15sdp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/sans_plain"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/linearLayout4"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="اسم الدواء" />

        <TextView
            android:id="@+id/medication_location_short"
            android:layout_width="176dp"
            android:layout_height="30dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/sans_plain"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_9sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/linearLayout4"
            app:layout_constraintTop_toBottomOf="@+id/medication_name"
            tools:text="الموقع" />
        <TextView
            android:id="@+id/medicationUserPhoneNumber"
            android:layout_width="176dp"
            android:layout_height="30dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/sans_plain"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_9sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/linearLayout4"
            app:layout_constraintTop_toBottomOf="@+id/medication_location_short"
            tools:text="رقم هاتف صاحب الدواء" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>